<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
      parent="parent-flow">

    <var name="chosenEnrollment" class="pl.agh.enrollme.model.Enroll" />

    <view-state id="list">
        <on-render>
            <evaluate expression="enrollmentDAO.enrollments" result="viewScope.enrollmentList"/>
        </on-render>
        <transition on="new" to="add"/>
        <transition on="configure" to="configure"/>
    </view-state>

    <subflow-state id="add" subflow="admin-panel/new-enrollment">
        <transition on="complete" to="list"/>
    </subflow-state>


    <!--TODO: remove it and make it as subflow with chosenEnrollment input variable!-->
    <view-state id="configure">
    </view-state>

</flow>